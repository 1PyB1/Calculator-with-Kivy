#:import utils kivy.utils 
<MyLayout>
    result:result
    BoxLayout:
        orientation: "vertical"
        size: root.width , root.height

        TextInput:
            id:result
            background_color: utils.get_color_from_hex('#262727ff')
            foreground_color: (1,1,1,1)
            text: "0"
            font_size: 40
            halign: "right"
            valign: "middle"
            size_hint: (1, 0.15)
            multiline: False
            cursor_blink: True
            on_text: root.on_result_text(self.text)
        GridLayout:
            cols: 4
            rows: 6
            
            Button:
                text: "%"
                font_size: 22
                size_hint: (0.2, 0.2)
                background_normal: ""
                background_color:
                    utils.get_color_from_hex('#343637ff')
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.percentage()
            Button:
                text: "CE"
                font_size: 22
                size_hint: (0.2, 0.2)
                background_normal: ""
                background_color:
                    utils.get_color_from_hex('#343637ff')
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.CE()
            Button:
                text: "C"
                font_size: 22
                size_hint: (0.2, 0.2)
                background_normal: ""
                background_color:
                    utils.get_color_from_hex('#343637ff')
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.clear()
            Button:
                text: "⌫"
                font_name: "fonts/DejaVuSans.ttf"
                font_size: 22
                size_hint: (0.2, 0.2)
                background_normal: ""
                background_color:
                    utils.get_color_from_hex('#343637ff')
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.delete_last_number()

            Button:
                text: "1/x"
                font_size: 22
                size_hint: (0.2, 0.2)
                background_normal: ""
                background_color:
                    utils.get_color_from_hex('#343637ff')
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.onedividedbyx()
            Button:
